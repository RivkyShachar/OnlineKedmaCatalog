@model ShoppingCartViewModel

@{
    var pageName = "Shopping Cart";
    ViewData["Title"] = pageName;
}
<html >
<head>
    <meta charset="UTF-8">
    <meta name="description" content="Ogani Template">
    <meta name="keywords" content="Ogani, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Ogani | Template</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200;300;400;600;900&display=swap" rel="stylesheet">

    <!-- Css Styles -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="~/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="~/css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="~/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="~/css/style.css" type="text/css">
</head>
<body>

    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>


    <!-- Humberger End -->
    <!-- Header Section Begin -->
    <header class="header" dir="rtl">
        <div class="container">
            <div class="row">
             
                <div class="col-lg-6">
                    <nav class="header__menu">


                        <ul>
                            <li class="active"><a href="@Url.Action("index", "Home")">עמוד ראשי</a></li>
                            <li class="active"><a href="@Url.Action("About", "Home")">עריכה</a></li>
                            <li class="active"><a href="@Url.Action("Contact","Home")">יצירת קשר</a></li>
                            <li class="active"><a href="@Url.Action("Contact","Home")"> </a></li>

                        </ul>

                    </nav>
                </div>
                <div class="col-lg-3">
                    <div class="header__cart">
                        <ul>
                            <li>
                                <a href="@Url.Action("Index","ShoppingCart")">
                                    <i class="fa fa-shopping-bag"></i> <span>@await Component.InvokeAsync("ShoppingCartSummary")</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="humberger__open">
                <i class="fa fa-bars"></i>
            </div>
        </div>
    </header>
    <!-- Shoping Cart Section Begin -->
    <section class="shoping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__table">
                        <table>
                            <thead>
                                <tr>
                                    <th class="shoping__product">Products</th>
                                    <th>Quantity</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var line in Model.ShoppingCart.ShoppingCartItems)
                                {
                                    <tr>
                                        <td class="shoping__cart__item">
                                            <img src="@line.Pizza.ImageUrl" alt="" style="max-width: 50px;">
                                            <h5>@line.Pizza.Name</h5>
                                        </td>

                                        <td class="shoping__cart__price">
                                            @line.Pizza.Barcode
                                        </td>
                                        <td class="text-center">
                                            <a class="btn btn-default" asp-action="RemoveFromShoppingCart" asp-route-pizzaId="@line.Pizza.Id"><b>-</b></a><b>@line.AmountBoxes</b><a class="btn btn-default" asp-action="AddToShoppingCart" asp-route-pizzaId="@line.Pizza.Id"><b>+</b></a>
                                        </td>
@*                                        <td class="text-center">
                                            <form asp-action="UpdateShoppingCart" asp-route-pizzaId="@line.Pizza.Id">
                                                <input type="number" name="amount" value="@line.Amount" min="1" max="100" />
                                                <button type="submit" class="btn btn-primary">Update</button>
                                            </form>
                                        </td>*@
                                        <td class="shoping__cart__item__close">
                                            <span class="icon_close"></span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__btns">
                        <a href="@Url.Action("Index", "Home")" class="primary-btn cart-btn">המשך קנייה</a>
                        <a href="@Url.Action("Index", "ShoppingCart")" class="primary-btn cart-btn cart-btn-right">עדכון עגלה </a>
                    </div>
                <form method="post" action="@Url.Action("GeneratePdf", "ShoppingCart")">
                    <button type="submit">Download PDF</button>
                </form>
                <form method="post" action="@Url.Action("SendEmailWithPdf", "ShoppingCart")">
                    <label for="email">Email address:</label>
                    <input type="email" name="email" required>
                    <button type="submit">Send Email</button>
                </form>

                </div>
        </div>
    </section>

</body>


</html>