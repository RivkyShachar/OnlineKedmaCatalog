    <!-- Categories Section End -->
   
    <section class="product spad">

        <div class="container" dir="rtl">
            <div class="row">
                <div class="col-lg-3 col-md-5">
                    <div class="sidebar">
                        <div class="sidebar__item" >
                            <h4>קטגוריות</h4>
                            <ul>
                                <li><a href="#">מוצרי יסוד</a></li>
                                <li><a href="#">קטניות</a></li>
                                <li><a href="#">קמחים</a></li>
