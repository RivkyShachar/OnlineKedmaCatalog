                            </ul>
                        </div>
                       
                      
                    </div>
                </div>

                <div class="col-lg-9 col-md-7">

                    <div class="row">

                        <section class="featured spad">
                            <div class="container">
                                @if (Model != null)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <div class="col-lg-3 col-md-4 col-sm-6 mix vegetables fresh-meat">
                                            <div class="featured__item">
                                                <div class="featured__item__pic set-bg" data-setbg="@Url.Content(@item.ImageUrl)">
                                                    <ul class="featured__item__pic__hover">
                                                       <li>
                                                            <p>
                                                                <a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-pizzaId="@item.Id" class="fa fa-shopping-cart"></a>
                                                            </p>
                                                        </li>
                                                    </ul>
                                                </div>
                                                <div class="featured__item__text">
                                                    <h6> @Html.DisplayFor(modelItem => item.Name)</h6>
                                                    <h5>@Html.DisplayFor(modelItem => item.Barcode)</h5>
                                                    <h7>@Html.DisplayFor(modelItem => item.Weight)</h7>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </section>



                        <div class="product__pagination">
                            <a href="#">1</a>
                            <a href="#">2</a>
                            <a href="#">3</a>
                            <a href="#"><i class="fa fa-long-arrow-right"></i></a>
                        </div>
                    </div>
                </div>
